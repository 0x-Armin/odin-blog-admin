<h1>{{title}}</h1>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>
<body>
 <p>Welcome to {{title}}</p>
{{#if token}}
  <h2>Blog posts</h2>
  {{#if blogPosts}}
    <ul>
    {{#each blogPosts}}
      <li>
        <h3><a href={{this.url}}>{{this.title}}</a></h3>
        <p>{{this.date_formatted}}</p>
        <p>Published: {{this.isPublished}}</p>
        <label class="switch">
          {{#isPublished this.isPublished}}
            <input class="togglePublishBtn" type="checkbox" value="{{this.id}}" checked>
          {{else}}
            <input class="togglePublishBtn" value="{{this.id}}" type="checkbox" >
          {{/isPublished}}
          <span class="slider"></span>
        </label>
      </li>
    {{/each}}
      <script src="../js/client.js"></script>
    </ul>
  {{/if}}

{{else}}
  <h2>Please log in</h2>
  <form action="/login" method="post">
    <label>
      Email:
      <input name="email" type="text" />
    </label>
    <label>
      Password:
      <input name="password" type="password" />
    </label>
    <button>Log in</button>
  </form>
  {{#if error}}
    <p>{{error}}</p>
  {{/if}}
{{/if}} 
</body>
</html>

